<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".SHARE.Share"
    android:background="#136E67">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:src="@drawable/cont"/>

    <LinearLayout
        android:id="@+id/sharepage"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:layout_marginHorizontal="30dp"
        android:layout_centerVertical="true">
        <androidx.cardview.widget.CardView
            android:clickable="true"
            android:id="@+id/SharepLinkCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="25dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="25dp">
                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:padding="20dp"
                    android:src="@drawable/shlink"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invite friends"
                    android:textSize="13dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginTop="10dp"
                    android:background="#727272" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Share Link"
                    android:textSize="16dp"
                    android:textColor="#6d0c74"
                    android:padding="15dp"/>


            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

<LinearLayout
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\nOur Partners :"
        android:paddingLeft="20dp"
        android:textSize="15dp"
        android:layout_above="@+id/partner"
        />

    <LinearLayout
        android:id="@+id/partner"
        android:layout_width="wrap_content"
        android:layout_height="111dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/helix"
            android:layout_width="500px"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:padding="20dp"
            android:src="@drawable/helix_logo" />

        <ImageView
            android:id="@+id/hex"
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="20dp"
            android:src="@drawable/hex_logo" />
    </LinearLayout>

</LinearLayout>
</RelativeLayout>